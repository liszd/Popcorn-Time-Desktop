// POPCORN-THEME: WINDOWS 10

//WINDOWS 10 Color scheme
    aWhite = #fff
    aLightGrey = #e6e6e6
    aDarkGrey = #999
    aLightBlue = #2775ec
    aDarkBlue = #0063b1
    aLightFont = #5c5c5c
    aDarkFont = #000
    aScrollbar = #c2c2c2
    aSelected = #91b9d8
    aSelectedHover = #619ccb
    aActiveBlue = #9ecdf2
    aButton = #ccc
    aButtonActive = #999

//Fonts
    $Font = 'Open Sans'
    $MainFont = 'Segoe UI semibold', 'Open Sans Semibold'
    $MainFontBold = 'Open Sans Bold'
    $AlternateFont = sans-serif    
    $ButtonFont = 'Open Sans Semibold'

//Main app
    $BgColor1 = aWhite
    $BgColor2 = aWhite

    $Text1 = aDarkFont
    $Text2 = aLightFont
    $Text3 = aLightFont
    $Text4 = darken(aLightFont,5)
    $TextError = aDarkGrey

    $CloseButton = rgba(aDarkBlue, .8)
    $CloseButtonHover = aDarkBlue
    
    $SpinnerColor1 = rgba(aDarkFont,.35)
    $SpinnerColor2 = aLightBlue

    $ScrollBarBg = rgba(aLightGrey, 0)
    $ScrollBarThumb = aScrollbar
    $ScrollBarThumbHover = aDarkGrey

//Top Bar
    $TitleBarBg = aLightGrey
    $TitleBarText = aDarkFont
    $FullScreenButton = aDarkGrey
    $FullScreenButtonHover = aDarkBlue

    $FilterBarBg = aLightGrey
    $FilterBarText = aDarkFont
    $FilterBarTextHover = aLightBlue
    $FilterBarActive = aDarkBlue

    $SearchBoxBg = aWhite

    $DropDownBg = aWhite
    $DropDownBgHover = aSelected
    $DropDownTextHover = aDarkFont
    $DropDownText = aDarkFont
    $DropDownOpacity = 1.00

    $FilterBarIcon = aLightFont
    $FilterBarIconHover = lighten(aDarkFont, 10)
    $FilterBarIcon-PosterWidth = aDarkBlue
    
    $TopBarShadow = 0px 6px 8px -4px rgba(0, 0, 0, 0)

//Buttons
    $ButtonBg = aButton
    $ButtonBgHover = darken(aButton, 8)
    $ButtonBgActive = aButtonActive
    
    $ButtonBgDisabled = rgba(aButton, .5);

    $ButtonBgOk = #27AE60
    $ButtonBgWarning = #cf283a
    
    $ButtonText = aDarkFont
    $ButtonTextHover = aDarkFont
    
    $ButtonRadius = 0px

//Checkbox
    $CheckboxBg = darken(aLightGrey, 5)
    $CheckboxCheck = aLightBlue

//Posters
    $PosterRadius = 0px
    $PosterHoverBorder = aLightBlue
    $PosterHoverOverlay = rgba(23, 24, 27, 0.3)
    $PosterShadow = 0px 0px 0px

//TV Series
    $ShowBgColor1 = aWhite
    $ShowBgColor2 = aLightGrey

    $EpisodeDetailsBg = aWhite
    
    $ShowText1 = aDarkFont
    $ShowText2 = aLightFont

    $SaisonListText = aDarkFont
    $EpisodeListText = rgba(aDarkFont, .8)
    
    $EpisodeSelectorBg = aSelected
    $EpisodeSelectorHover = aSelectedHover
    $EpisodeSelectorText = aDarkFont

    $ShowWatchedIcon_false = rgba(aDarkFont,0.3)
    $ShowWatchedIcon_hover = rgba(aDarkFont,0.6) 
    $ShowWatchedIcon_true = rgba(aDarkFont,0.7)

    $QualitySelector = aLightBlue

//File selector
    $FileSelectorText = aDarkFont
    $FileSelectorBg = rgba(0,0,0,0)
    $FileSelectorShadow = rgba(0,0,0,0)

//Settings
    $SettingsCategoriesText = aDarkText
    $SettingsSeparator = rgba(#000,.1)

    $InputBoxBg = darken(aLightGrey, 5)
    $InputBoxText = aDarkFont
    
    $SettingsText1 = aDarkFont
    $SettingsText2 = aLightFont

    $SettingsButtonText = rgba(aDarkFont, .9)
    $SettingsButtonTextHover = aDarkFont

// Notifications
    $NotificationText = aDarkFont
    $NotificationInfo = aWhite
    $NotificationSuccess = aWhite
    $NotificationWarning = lighten(#dbb756, 7)
    $NotificationOrange = lighten(#f07f53, 15)
    $NotificationError = lighten(#cf283a, 15)
    $NotificationBorderColor = aDarkGrey

    $NotificationBtn = aButton
    $NotificationBtnText = aDarkFont

    $NotifAlertBg = #191d22
    $NotifAlertText = #fff

//Misc
    $FavoriteColor = #e74c3c
    $WarningColor = #FFFF00
    $PngLogo = brightness(0.3)
    $PngLogo_BgColo1 = brightness(0.2)
    
//Player
    $PlayerColor = aDarkBlue


