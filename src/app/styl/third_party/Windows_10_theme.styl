@import 'views/app'

//additionnal set of rules
.init-progressbar > div,
.loading .state .loading-progressbar > div
    background-color aDarkBlue
.show-quality-container .toggle,
.movie-detail .content-box .bottom-container .movie-quality-container .switch .toggle
    background aLightBlue
.filter-bar, #header
    opacity 1


// simulate windows 10 borders
.drop-indicator
    background-color aDarkBlue
    display block
    z-index 99999
.drop-indicator.top
    height 1px
    left 0px
.drop-indicator.bottom
    height 1px
    right 0px
.drop-indicator.right
    width 1px
    top 0px
.drop-indicator.left
    width 1px
    bottom 0px

// remove spinner bg
#content .main-browser .list-region .list .spinner
    background rgba(aWhite,0.2)

// item watched
.item.watched
    opacity 0.65

// movie details
.movie-detail .backdrop,
.movie-detail .backdrop.fadein
    display none
.movie-detail .backdrop-overlay
    opacity 0
.movie-detail .content-box .meta-container .title,

.movie-detail .content-box .meta-container .overview,
.movie-detail .content-box .bottom-container .favourites-toggle,
.movie-detail .content-box .bottom-container .watched-toggle,
.movie-detail .content-box .bottom-container .sub-dropdown,
.movie-detail .content-box .bottom-container .movie-quality-container .q720,
.movie-detail .content-box .bottom-container .movie-quality-container .q1080
    color aDarkFont
.movie-detail .content-box .meta-container .metadatas .dot
    background-color rgba(aLightFont, .7)
.movie-detail .content-box .meta-container .metadatas .magnet-link
    color aDarkGrey
.movie-detail .content-box .bottom-container .movie-quality-container .switch
    border 2px solid darken(aLightGrey,10)
.movie-detail .poster-box .mcover-image
    box-shadow 0px 0px 7px
.movie-detail .content-box .meta-container .metadatas .metaitem,
.movie-detail .content-box .meta-container .metadatas .rating-container .number-container
    color aLightFont

// show details
.tv-poster
    background rgba(0,0,0,0)
.tv-poster .tv-poster-background
    display none
.tv-meta-data .tv-dot
    background-color rgba(aLightFont, .7)
.tv-meta-data .favourites-toggle,
.tv-meta-data .tv-overview,
.tv-meta-data .tv-title,
.tv-meta-data .show-watched-toggle
    color aDarkFont
.episode-info .show-magnet-link
    color aDarkGrey
.episode-info .show-quality-container .quality-selector .disabled
    opacity 0.5
.tv-poster .tv-cover
    box-shadow 0px 0px 7px
.tv-meta-data .tv-year,
.tv-meta-data .tv-runtime,
.tv-meta-data .tv-status,
.tv-meta-data .tv-genre,
.tv-meta-data .rating-container-tv .number-container-tv
    color aLightFont

// loading
.loading .state .cancel-button
    background transparent

// file selector & torrent coll
.torrent-collection-container .content .torrents-info ul li.file-item a:hover, .torrent-collection-container .content .onlinesearch-info ul li.file-item a:hover, .torrent-collection-container .content .torrents-info ul li.result-item a:hover, .torrent-collection-container .content .onlinesearch-info ul li.result-item a:hover,
.file-selector-container .content ul li.file-item a:hover
    color aLightBlue

// about
.about-container .icon-title,
.about-container .content .icons_social
    -webkit-filter brightness(0.1)
.about-container .content,
.about-container .content .last-line,
.about-container .content .title-version a,
.about-container .content .title-issue a
    color aDarkFont
.about-container
    background-image none
.about-container .overlay-content
    background rgba(0,0,0,0)

// notification
#notification .notification .close
    color aDarkFont
